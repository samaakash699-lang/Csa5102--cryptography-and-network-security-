#include <stdio.h>
#include <string.h>
void simpleDES(char text[], char key[]) {
    char cipher[100];
    int i;
    printf("\nPlaintext: %s", text);
    printf("\nKey: %s", key);
    for(i = 0; i < strlen(text); i++)
        cipher[i] = text[i] ^ key[i % strlen(key)];
    cipher[i] = '\0';

    printf("\nEncrypted text (in ASCII): ");
    for(i = 0; i < strlen(cipher); i++)
        printf("%d ", cipher[i]);
    for(i = 0; i < strlen(cipher); i++)
        cipher[i] = cipher[i] ^ key[i % strlen(key)];
    cipher[i] = '\0';

    printf("\nDecrypted text: %s\n", cipher);
}

int main() {
    char text[100], key[100];
    printf("Enter plaintext: ");
    scanf("%s", text);
    printf("Enter key: ");
    scanf("%s", key);

    simpleDES(text, key);
    return 0;
}

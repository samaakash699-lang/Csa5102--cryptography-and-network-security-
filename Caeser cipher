#include <stdio.h>
#include <ctype.h>
void caesarCipher(char text[], int key, int mode) {
    char ch;
    for (int i = 0; text[i] != '\0'; ++i) {
        ch = text[i];
        if (isalpha(ch)) {
            char base = isupper(ch) ? 'A' : 'a';
            if (mode == 1)
                ch = (ch - base + key) % 26 + base;
            else
                ch = (ch - base - key + 26) % 26 + base;
        }
        text[i] = ch;
    }
}
int main() {
    char text[100];
    int key, choice;
    printf("Enter a message: ");
    fgets(text, sizeof(text), stdin);
    printf("Enter key (1-25): ");
    scanf("%d", &key);
    printf("1. Encrypt\n2. Decrypt\nEnter your choice: ");
    scanf("%d", &choice);
    if (choice == 1)
        caesarCipher(text, key, 1);
    else if (choice == 2)
        caesarCipher(text, key, 2);
    else {
        printf("Invalid choice.\n");
        return 0;
    }
    printf("Result: %s\n", text);
    return 0;
}
